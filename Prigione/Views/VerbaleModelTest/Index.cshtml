@model IEnumerable<Prigione.Models.VerbaleModelTest>
@{
    ViewData["Title"] = "Verbali";
}

<h3 class="mt-3">Aggiungi verbale</h3>
<form asp-controller="VerbaleModelTest" asp-action="Create" method="post" class="mb-3">

    <div>
        <div class="d-flex mb-2">
            <div class="me-1">
                <label>Data Verbale</label>
                <input type="date" name="DataVerbale" class="win98-input" placeholder="DataVerbale..." required />
            </div>

            <div class="me-1">
                <label>Data Violazione</label>
                <input type="date" name="DataViolazione" class="win98-input" placeholder="DataViolazione..." required />
            </div>
        </div>
                
        <div>
            <input type="text" name="IndirizzoViolazione" class="win98-input mb-1 w-50" placeholder="IndirizzoViolazione..." required />
            <input type="number" name="DecurtamentoPunti" class="win98-input mb-1 w-50" placeholder="DecurtamentoPunti..." required />
            <input type="number" step="0,01" name="Importo" class="win98-input mb-1 w-50" placeholder="Importo..." required />
            <select name="ViolazioneID" class="win98-input mb-1 w-50" required>
                <option value="">-- Violazione --</option>
                @foreach (var v in ViewBag.Violazioni)
                {
                    <option value="@v.ViolazioneID">@v.Descrizione</option>
                }
            </select>
            <select name="TrasgressoreID" class="win98-input w-50" required>
                <option value="">-- Trasgressore --</option>
                @foreach (var t in ViewBag.Trasgressori)
                {
                    <option value="@t.TrasgressoreID">@t.Cognome @t.Nome @t.CF</option>
                }
            </select>
        </div>
        
    </div>

    <button type="submit" class="win98-button mt-3">+</button>
</form>

<h3 class="mt-5 text-center">Lista verbali (@Model.Count())</h3>
<table class="table table-striped win98-table">
    <thead>
        <tr>
            <th>Verbale ID</th>
            <th>DecurtamentoPunti</th>
            <th>IndirizzoViolazione</th>
            <th>Violazione</th>
            <th>Trasgressore</th>
            <th>Importo</th>
            <th>DataVerbale</th>
            <th>DataViolazione</th>
            <th>Operazioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.VerbaleID</td>
                <td>@v.DecurtamentoPunti</td>
                <td>@v.IndirizzoViolazione</td>
                <td>@v.Violazione?.Descrizione</td>
                <td>@v.Trasgressore?.Nome @v.Trasgressore?.Cognome</td>
                <td>@v.Importo</td>
                <td>@v.DataVerbale</td>
                <td>@v.DataViolazione</td>
                <td>
                    <a asp-controller="VerbaleModelTest"
                       asp-action="Edit"
                       asp-route-id="@v.VerbaleID"
                       class="win98-button me-2">
                        Modifica
                    </a>
                    <form asp-controller="VerbaleModelTest"
                          asp-action="Delete"
                          asp-route-id="@v.VerbaleID"
                          method="post"
                          onsubmit="return confirm('Eliminare?')">
                        <button type="submit" class="win98-button-error">Elimina</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
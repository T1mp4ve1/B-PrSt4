@model Prigione.Models.VerbaleModelTest

<h3 class="mt-3">Modifica Trasgressore</h3>

<form asp-controller="VerbaleModelTest" asp-action="Edit" method="post" class="mb-3">
    <input type="hidden" asp-for="VerbaleID" />
    <div>
        <div class="d-flex mb-2">
            <div class="me-1">
                <label>Data Verbale</label>
                <input asp-for="DataVerbale" type="date" name="DataVerbale" class="win98-input" placeholder="DataVerbale..." required />
            </div>

            <div class="me-1">
                <label>Data Violazione</label>
                <input asp-for="DataViolazione" type="date" name="DataViolazione" class="win98-input" placeholder="DataViolazione..." required />
            </div>
        </div>


        <div>
            <input asp-for="IndirizzoViolazione" type="text" name="IndirizzoViolazione" class="win98-input mb-1 w-50" placeholder="IndirizzoViolazione..." required />
            <input asp-for="DecurtamentoPunti" type="number" name="DecurtamentoPunti" class="win98-input mb-1 w-50" placeholder="DecurtamentoPunti..." required />
            <input asp-for="Importo" type="number" step="0,01" name="Importo" class="win98-input mb-1 w-50" placeholder="Importo..." required />
            <select asp-for="ViolazioneID" name="ViolazioneID" class="win98-input mb-1 w-50" required>
                <option value="">-- Violazione --</option>
                @foreach (var v in ViewBag.Violazioni)
                {
                    <option value="@v.ViolazioneID">@v.Descrizione</option>
                }
            </select>
            <select asp-for="TrasgressoreID" name="TrasgressoreID" class="win98-input w-50" required>
                <option value="">-- Trasgressore --</option>
                @foreach (var t in ViewBag.Trasgressori)
                {
                    <option value="@t.TrasgressoreID">@t.Cognome @t.Nome @t.CF</option>
                }
            </select>
        </div>

    </div>

    <button type="submit" class="win98-button mt-3">Salva</button>
    <a asp-action="Index" class="win98-button-error mt-3">Annulla</a>
</form>

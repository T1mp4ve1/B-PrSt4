@model IEnumerable<Prigione.Models.ViolazioneModel>
@{
    ViewData["Title"] = "Violazioni";
}

<h3 class="mt-3">Aggiungi violazione</h3>
<form asp-controller="Violazioni" asp-action="Create" method="post" class="d-flex mb-3">
    <input type="text" name="Descrizione" class="form-control w-25 me-1" required />
    <button type="submit" class="btn btn-outline-success">+</button>
</form>

<h3 class="mt-3 text-center">Lista violazioni (@Model.Count())</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Violazione ID</th>
            <th>Descrizione</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var v in Model)
    {
        <tr>
            <td>@v.ViolazioneID</td>
            <td>@v.Descrizione</td>
        </tr>
    }
    </tbody>
</table>
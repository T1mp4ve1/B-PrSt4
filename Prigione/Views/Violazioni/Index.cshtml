@model IEnumerable<Prigione.Models.ViolazioneModel>
@{
    ViewData["Title"] = "Violazioni";
}

<h3 class="win98-title-section">Aggiungi violazione</h3>

<form asp-controller="Violazioni" asp-action="Create" method="post" class="win98-form">
    <input type="text" name="Descrizione" class="win98-input" required />
    <button type="submit" class="win98-button">Aggiungi</button>
</form>

<h3 class="win98-title-section text-center">
    Lista violazioni (@Model.Count())
</h3>

<table class="win98-table">
    <thead>
        <tr>
            <th>Violazione ID</th>
            <th>Descrizione</th>
            <th>Operazioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.ViolazioneID</td>
                <td>@v.Descrizione</td>
                <td class="d-flex">
                    <button type="button"
                            class="win98-button me-2"
                            onclick="openEditWin98(@v.ViolazioneID, '@v.Descrizione')">
                        Modifica
                    </button>
                    <form asp-controller="Violazioni"
                          asp-action="Delete"
                          asp-route-id="@v.ViolazioneID"
                          method="post"
                          onsubmit="return confirm('Eliminare?')">

                        <button type="submit" class="win98-button-error">Elimina</button>

                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- MODALE MODIFICA JS -->
<div id="win98-modal" class="win98-modal" style="display:none;">
    <div class="win98-window">
        <div class="win98-window-title">
            Modifica Violazione
        </div>

        <form method="post" asp-action="Edit">
            <input type="hidden" id="edit-id" name="ViolazioneID" />

            <div class="win98-window-content">
                <label>Descrizione:</label><br />
                <input id="edit-descrizione" name="Descrizione" class="win98-input" />
            </div>

            <div class="win98-window-buttons">
                <button type="submit" class="win98-button">Salva</button>
                <button type="button" class="win98-button" onclick="closeEditWin98()">Annulla</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openEditWin98(id, descrizione) {
        document.getElementById("edit-id").value = id;
        document.getElementById("edit-descrizione").value = descrizione;

        document.getElementById("win98-modal").style.display = "flex";
    }

    function closeEditWin98() {
        document.getElementById("win98-modal").style.display = "none";
    }
</script>

@model Prigione.Models.TrasgressoreModel

<h3 class="mt-3">Modifica Trasgressore</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TrasgressoreID" />
    <input asp-for="Nome" class="win98-input" placeholder="Nome" />
    <input asp-for="Cognome" class="win98-input" placeholder="Cognome" />
    <input asp-for="Indirizzo" class="win98-input" placeholder="Indirizzo" />
    <input asp-for="Citta" class="win98-input" placeholder="Citta" />
    <input asp-for="CAP" class="win98-input" placeholder="CAP" />
    <input asp-for="CF" class="win98-input" placeholder="CF" />

    <button type="submit" class="win98-button mt-3">Salva</button>
    <a asp-action="Index" class="win98-button-error mt-3">Annulla</a>
</form>

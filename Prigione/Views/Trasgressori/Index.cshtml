@model IEnumerable<Prigione.Models.TrasgressoreModel>
@{
    ViewData["Title"] = "Trasgressori";
}

<h3 class="mt-3">Aggiungi trasgressore</h3>
<form asp-controller="Trasgressori" asp-action="Create" method="post" class="mb-3">
    <div class="d-flex">
        <input type="text" name="Nome" class="form-control mb-1 me-1 w-25" placeholder="Nome..." required />
        <input type="text" name="Cognome" class="form-control mb-1 w-25" placeholder="Cognome..." required />
    </div>
    
    <div class="d-flex">
        <input type="text" name="Indirizzo" class="form-control mb-1 me-1 w-25" placeholder="Indirizzo..." required />
        <input type="text" name="Citta" class="form-control mb-1 w-25" placeholder="Citta..." required />
    </div>
    
    <div class="d-flex">
        <input type="text" name="CAP" class="form-control mb-1 me-1 w-25" placeholder="CAP..." required />
        <input type="text" name="CF" class="form-control mb-1 w-25" placeholder="CF..." required />
    </div>
    
    <button type="submit" class="btn btn-outline-success mt-3">+</button>
</form>

<h3 class="mt-3 text-center">Lista trasgressori (@Model.Count())</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Trasgressore ID</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Citta</th>
            <th>CAP</th>
            <th>CF</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TrasgressoreID</td>
                <td>@t.Cognome</td>
                <td>@t.Nome</td>
                <td>@t.Indirizzo</td>
                <td>@t.Citta</td>
                <td>@t.CAP</td>
                <td>@t.CF</td>
            </tr>
        }
    </tbody>
</table>
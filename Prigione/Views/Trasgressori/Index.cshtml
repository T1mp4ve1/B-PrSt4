@model IEnumerable<Prigione.Models.TrasgressoreModel>
@{
    ViewData["Title"] = "Trasgressori";
}

<h3 class="mt-3">Aggiungi trasgressore</h3>
<form asp-controller="Trasgressori" asp-action="Create" method="post" class="mb-3">
    <div class="d-flex">
        <input type="text" name="Nome" class="mb-1 me-1 w-25 win98-input" placeholder="Nome..." required />
        <input type="text" name="Cognome" class="mb-1 w-25 win98-input" placeholder="Cognome..." required />
    </div>
    
    <div class="d-flex">
        <input type="text" name="Indirizzo" class="mb-1 me-1 w-25 win98-input" placeholder="Indirizzo..." required />
        <input type="text" name="Citta" class="mb-1 w-25 win98-input" placeholder="Citta..." required />
    </div>
    
    <div class="d-flex">
        <input type="text" name="CAP" class="mb-1 me-1 w-25 win98-input" placeholder="CAP..." required />
        <input type="text" name="CF" class="mb-1 w-25 win98-input" placeholder="CF..." required />
    </div>
    
    <button type="submit" class="win98-button mt-3">+</button>
</form>

<h3 class="mt-3 text-center">Lista trasgressori (@Model.Count())</h3>
<table class="table table-striped win98-table">
    <thead>
        <tr>
            <th>Trasgressore ID</th>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Citta</th>
            <th>CAP</th>
            <th>CF</th>
            <th>Operazioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TrasgressoreID</td>
                <td>@t.Cognome</td>
                <td>@t.Nome</td>
                <td>@t.Indirizzo</td>
                <td>@t.Citta</td>
                <td>@t.CAP</td>
                <td>@t.CF</td>
                <td>
                    <a asp-controller="Trasgressori"
                       asp-action="Edit"
                       asp-route-id="@t.TrasgressoreID"
                       class="win98-button me-2">
                        Modifica
                    </a>
                    <form asp-controller="Trasgressori"
                          asp-action="Delete"
                          asp-route-id="@t.TrasgressoreID"
                          method="post"
                          onsubmit="return confirm('Eliminare?')">

                        <button type="submit" class="win98-button-error">Elimina</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>